{
  "Serilog": {
    "Using":  [ "Serilog.Sinks.File" ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      { 
        "Name": "File", 
        "Args": { 
          "path": "log-.txt", 
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [T:{ThreadId}] {Message}{NewLine}{Exception}"
        } 
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  }
}